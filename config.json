{
  "name": "Smart Voltronic Node-RED",
  "version": "1.0.0",
  "slug": "smart_voltronic",
  "description": "Node-RED Voltronic inverter bridge to MQTT",
  "startup": "services",
  "boot": "auto",
  "arch": ["amd64", "aarch64", "armv7"],

  "init": false,

  "hassio_api": true,
  "homeassistant_api": true,
  "hassio_role": "default",

  "host_network": false,

  "devices": [
    "/dev/serial/by-id:/dev/serial/by-id:rwm"
  ],

  "map": ["data:rw"],

  "options": {
    "serial_ports": ["", "", ""],

    "mqtt_host": "",
    "mqtt_port": 1883,
    "mqtt_user": "",
    "mqtt_pass": "",
    "mqtt_prefix": "voltronic"
  },

  "schema": {
    "serial_ports": ["str?", "str?", "str?"],

    "mqtt_host": "str",
    "mqtt_port": "int(1,65535)",
    "mqtt_user": "str",
    "mqtt_pass": "password",
    "mqtt_prefix": "str?"
  }
}
